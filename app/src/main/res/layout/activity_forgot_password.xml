        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textColorHint="#676767"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
